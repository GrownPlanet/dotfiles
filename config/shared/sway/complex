#
# variables
#

set $menu fuzzel

#
# style
#

# font
font jetbrainsmononerdfont 12

# border
default_border pixel 2
titlebar_border_thickness 2

# gaps
# gaps outer 5
# gaps inner 5

# colors
set $text #abb2bf
set $base #282c34
set $crust #21252b
set $overlay0 #3b3f4c
set $lavender #c678dd
set $red #e86671
set $surface2 #393f4a

# target                title     bg    text  indicator border
client.focused          $text     $base $text $text     $text
client.focused_inactive $overlay0 $base $text $overlay0 $overlay0
client.unfocused        $overlay0 $base $text $text     $overlay0
client.urgent           $text     $base $text $overlay0 $text
client.placeholder      $overlay0 $base $text $overlay0 $overlay0
client.background       $base

# status bar
# bar { swaybar_command waybar }
bar {
    colors {
        background         "$baseBB"
        statusline         $text
        focused_statusline $text
        focused_separator  $base

        # target           border bg        text
        focused_workspace  $base  $text     $crust
        active_workspace   $base  $surface2 $text
        inactive_workspace $base  $base     $text
        urgent_workspace   $base  $red      $crust
    }
    status_command $HOME/.config/sway/bar.sh
    font jetbrainsmononerdfont 12
}

#
# keybindings
#

# Exit sway (logs you out of your Wayland session)
bindsym $mod+Shift+e exec wlogout
