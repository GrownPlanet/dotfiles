#
# variables
#

set $menu fuzzel

#
# style
#

# font
font jetbrainsmononerdfont 11

# border
default_border pixel 2
titlebar_border_thickness 2

# gaps
gaps outer 5
gaps inner 5

# colors
set $primary #abb2bf
set $text #abb2bf
set $overlay0 #3b3f4c
set $base #282c34

# target                title     bg    text     indicator border
client.focused          $primary  $base $text    $primary  $primary
client.focused_inactive $overlay0 $base $text    $overlay0 $overlay0
client.unfocused        $overlay0 $base $text    $primary  $overlay0
client.urgent           $primary  $base $primary $overlay0 $primary
client.placeholder      $overlay0 $base $text    $overlay0 $overlay0
client.background       $base

# status bar
bar {
    swaybar_command waybar
}

#
# keybindings
#

# Exit sway (logs you out of your Wayland session)
bindsym $mod+Shift+e exec wlogout
